// Equal 与指定的字符串相等
func (strType *StringType) Equal(str string, customError ...string) *StringType {
	if strType.err != nil || strType.currentValue == "" {
		return strType
	}
	if strType.currentValue != str {
		strType.err = wrapError(strType.name, InvalidErrorText, customError...)
	}
	return strType
}

